[core]
	editor = emacsclient -t
	excludesfile = ~/.gitignore

[user]
	name = Josias Iquabius
	email = iquabius@gmail.com

[github]
	user = iquabius

[color "status"]
	added = green
	changed = red bold
	untracked = magenta bold

[color "branch"]
	remote = yellow

[alias]
	br = branch
	ci = commit
	co = checkout
	st = status
	lg = log --oneline --reverse

[log]
	abbrevCommit = true

[status]
	short = true

[difftool "latexdiff"]
